<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pattern"
    android:backgroundTint="#30000000"
    android:backgroundTintMode="src_over"
    tools:context=".ModeActivity">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VRSTA IGRE"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:shadowColor="#000000"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="10.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/autobusStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:text="Autobus" />

    <Button
        android:id="@+id/neverStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:text="Never have i ever" />

    <Button
        android:id="@+id/kingStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:text="KINGS CUP" />
    
    <androidx.fragment.app.FragmentContainerView
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="440dp"
        android:layout_gravity="center"
        android:id="@+id/fragmentContainer" />





</LinearLayout>