<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/game_board">

    <ImageView
        android:id="@+id/autobusLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/autobus_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/game_mat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:src="@drawable/b7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/firstCard"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:src="@drawable/finger_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginVertical="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/firstSelector"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:src="@drawable/b7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/secondCard"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:src="@drawable/finger_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="127dp"
        android:layout_marginVertical="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/secondSelector"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:src="@drawable/b7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="195dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/thirdCard"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:src="@drawable/finger_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="212dp"
        android:layout_marginVertical="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/thirdSelector"
        />

    <ImageView
        android:layout_width="65dp"
        android:layout_height="95dp"
        android:src="@drawable/b7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="275dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fourthCard"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:src="@drawable/finger_down"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="293dp"
        android:layout_marginVertical="410dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fourthSelector"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Igrač na redu"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="180dp" />
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Igrač"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginVertical="200dp"
        android:id="@+id/playerTag"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Karti u špilu:"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="540dp"
        android:layout_marginRight="200dp"
        android:id="@+id/cardsDeck"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Runda:"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="500dp"
        android:layout_marginRight="200dp"
        android:id="@+id/roundNumber"
        />

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Igrač 2 - Broj gutljajeva: "
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="540dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/playerTwoSips"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Igrač 1 - Broj gutljajeva: "
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="500dp"
        android:layout_marginLeft="210dp"
        android:id="@+id/playerOneSips"/>

    <Button
        android:id="@+id/higherButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="75dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/dark_green"
        android:text="VEĆA" />

    <Button
        android:id="@+id/lowerButton"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="75dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/dark_green"
        android:text="MANJA" />

    <Button
        android:id="@+id/surrenderButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textSize="30dp"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/flag_surrender"
        android:text="🏳️"
        style="@style/Widget.AppCompat.Button.Borderless"
        />


</androidx.constraintlayout.widget.ConstraintLayout>