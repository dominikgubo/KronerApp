<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/game_board">

    <ImageView
        android:id="@+id/autobusLogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/autobus_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/game_mat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="70dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Igrač"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginVertical="200dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Karti u špilu:"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="530dp"
        android:layout_marginRight="300dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Runda:"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginVertical="500dp"
        android:layout_marginRight="340dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>