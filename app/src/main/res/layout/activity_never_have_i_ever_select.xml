<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern"
    android:backgroundTint="#30000000"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".RulesActivity">


    <Button
        android:id="@+id/neverHaveIEverStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_button"
        android:text="Započni igru"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_marginTop="75dp"
        android:id="@+id/studentModeContainer"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/custom_fragment"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!--EditText1 widget inside ViewGroup2-->
        <TextView
            android:fontFamily="@font/inter_black"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/editText1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="STUDENTSKI PAKET"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/studentIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/student"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/editText1"
            />

        <CheckBox
            android:id="@+id/studentCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="25dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:buttonTint="@color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="200dp"
        android:id="@+id/driverModeContainer"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/custom_fragment"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <!--EditText1 widget inside ViewGroup2-->
        <TextView
            android:fontFamily="@font/inter_black"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/editTextDriver"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="VOZAČKI PAKET"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/driverIcon"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/driver"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/editTextDriver"
            />

        <CheckBox
            android:id="@+id/driverCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="25dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:buttonTint="@color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="325dp"
        android:id="@+id/adultModeContainer"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/custom_fragment"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:fontFamily="@font/inter_black"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/editTextAdult"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="18+ &#xA; PAKET"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/adultIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/adult"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/editTextAdult"
            />

        <CheckBox
            android:id="@+id/adultCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingRight="25dp"
            android:scaleX="2.0"
            android:scaleY="2.0"
            android:buttonTint="@color/black"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>