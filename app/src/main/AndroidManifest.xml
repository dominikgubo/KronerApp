<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qw.kronerapp">

    <application
        android:name="com.qw.kronerapp.FirebaseOffline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/Kroner"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KronerApp">
        <activity android:name="com.qw.kronerapp.loading.LoadingAutobusActivity" android:screenOrientation="portrait" />
        <activity android:name="com.qw.kronerapp.loading.NeverLoadingActivity" android:screenOrientation="portrait" />
        <activity android:name="com.qw.kronerapp.loading.LoadingKingActivity" android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.KingsCupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.loading.LoadingActivity"
            android:screenOrientation="portrait"  android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qw.kronerapp.NeverHaveIEverSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.neverHaveIEverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.RulesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qw.kronerapp.ModeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name="com.qw.kronerapp.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>